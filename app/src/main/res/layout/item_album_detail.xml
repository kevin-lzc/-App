<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
<TextView

    android:layout_centerVertical="true"
    android:id="@+id/order_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:text="0"
    android:textSize="26sp"/>
    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/order_text"
        >
        <TextView
            android:id="@+id/detail_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginRight="100dp"
            android:ellipsize="end"
            android:text="我是大标题"
            android:textSize="17sp"
            android:textColor="#000000"
            />
        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/detail_item_play_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
android:drawableLeft="@mipmap/play_info_icon"
                android:drawablePadding="4dp"
                android:text="14.4万"
                android:textColor="#979797"
                />
            <TextView
                android:id="@+id/detail_item_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:drawableLeft="@mipmap/ic_sound"
                android:drawablePadding="4dp"
                android:text="05:32"
                android:textColor="#979797"
                />

        </LinearLayout>




    </LinearLayout>

    <TextView
        android:id="@+id/detail_item_update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        android:text="2018-11-22"
        android:layout_alignParentBottom="true"
        android:textColor="#979797"/>

</RelativeLayout>